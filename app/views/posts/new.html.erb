<h2>Create a new post here!</h2>
<!-- form_tag '/posts', method: "POST" do -->
<!-- f is being yielded to the block -->
<%= form_for @post do |f|%>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :content %>
	<%= f.text_area :content %>
	<%= f.label :author %>
	<%= f.text_field :author %>
	<%= f.label :category %>
	<%= f.text_field :category %>
	<%= f.submit :submit %>
<% end %>

<%= link_to "Back to list", root_path %>

